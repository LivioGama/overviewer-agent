{
  "name": "overviewer-agent",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub App that runs automation/agent tasks against repositories in the cloud",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter=backend dev",
    "build": "bun run --filter=* build",
    "test": "bun run --filter=* test",
    "lint": "bun run --filter=* lint",
    "type-check": "bun run --filter=* type-check",
    "db:migrate": "bun run --filter=backend db:migrate",
    "db:seed": "bun run --filter=backend db:seed"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}


