{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@apps/*": ["apps/*/src"],
      "@packages/shared": ["packages/shared/src"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}