{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@backend/*": ["apps/backend/src/*"],
      "@runner/*": ["apps/runner/src/*"],
      "@web/*": ["apps/web/src/*"]
    }
  },
  "include": ["apps/backend/src", "apps/runner/src", "apps/web/src"],
  "exclude": ["node_modules"]
}
